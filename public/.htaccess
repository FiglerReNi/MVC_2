<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
         Options -Multiviews
    </IfModule>
   RewriteEngine On
   RewriteBase /object_oriented_PHP_MVC/public
   RewriteCond %{REQUEST_FILENAME} !-d
   RewriteCond %{REQUEST_FILENAME} !-f
   RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
</IfModule>